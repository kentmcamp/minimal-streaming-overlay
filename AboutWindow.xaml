<Window x:Class="minol.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About minol"
        Height="680"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Background="#F5F5F5">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30,40,30">

                <!-- Header Section -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
                    <Image Source="pack://application:,,,/mIcon.ico" Width="64" Height="64" Margin="0,0,20,0" VerticalAlignment="Top"/>
                    <StackPanel VerticalAlignment="Top">
                        <TextBlock Text="minol"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   Margin="0,0,0,5"/>

                        <TextBlock Text="Streaming Overlay with Timer and Keyboard Input Display"
                                   FontSize="14"
                                   Foreground="#666"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,10"/>

                        <TextBlock x:Name="VersionText"
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="#0066CC"/>
                    </StackPanel>
                </StackPanel>

                <Separator Margin="0,0,0,25"/>

                <!-- Features Section -->
                <TextBlock Text="Key Features"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#333"
                           Margin="0,0,0,15"/>

                <StackPanel Margin="0,0,0,25">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="â±" FontSize="14" Width="25"/>
                        <TextBlock Text="Real-Time Timer Display" FontSize="12" FontWeight="SemiBold" Foreground="#333"/>
                    </StackPanel>
                    <TextBlock Text="Displays elapsed time with customizable fonts and colors. Click to pause/resume." FontSize="11" Foreground="#666" Margin="25,0,0,10" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="âŒ¨" FontSize="14" Width="25"/>
                        <TextBlock Text="Keyboard Input Display" FontSize="12" FontWeight="SemiBold" Foreground="#333"/>
                    </StackPanel>
                    <TextBlock Text="Shows pressed keys and key combinations (chords) with intelligent hold-and-fade animation for better readability." FontSize="11" Foreground="#666" Margin="25,0,0,10" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="ðŸŽ¨" FontSize="14" Width="25"/>
                        <TextBlock Text="Theme System" FontSize="12" FontWeight="SemiBold" Foreground="#333"/>
                    </StackPanel>
                    <TextBlock Text="Save, load, and manage custom themes. Set a default theme to load automatically on startup or switch themes instantly." FontSize="11" Foreground="#666" Margin="25,0,0,10" TextWrapping="Wrap"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="âš™" FontSize="14" Width="25"/>
                        <TextBlock Text="Full Customization" FontSize="12" FontWeight="SemiBold" Foreground="#333"/>
                    </StackPanel>
                    <TextBlock Text="Customize fonts, colors, opacity, and timing for both timer and keyboard input displays. All settings persist automatically." FontSize="11" Foreground="#666" Margin="25,0,0,0" TextWrapping="Wrap"/>
                </StackPanel>

                <Separator Margin="0,0,0,25"/>

                <!-- About Section -->
                <TextBlock Text="About"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#333"
                           Margin="0,0,0,15"/>

                <TextBlock Text="minol is a lightweight, always-on-top Windows overlay designed for streamers and content creators. Perfect for showcasing real-time input and elapsed time during gameplay, speedruns, or any live performance."
                           FontSize="11"
                           Foreground="#666"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Creator:" FontSize="11" FontWeight="SemiBold" Foreground="#333" Width="70"/>
                    <TextBlock Text="Kent" FontSize="11" Foreground="#666"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Release:" FontSize="11" FontWeight="SemiBold" Foreground="#333" Width="70"/>
                    <TextBlock Text="February 2026" FontSize="11" Foreground="#666"/>
                </StackPanel>

                <!-- GitHub Link -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                    <TextBlock Text="Source:" FontSize="11" FontWeight="SemiBold" Foreground="#333" Width="70"/>
                    <TextBlock FontSize="11">
                        <Hyperlink NavigateUri="https://github.com/kentmcamp/minimal-streaming-overlay"
                                   RequestNavigate="Hyperlink_RequestNavigate"
                                   Foreground="#0066CC">
                            GitHub Repository
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

                <!-- Copyright -->
                <TextBlock Text="Â© 2026 Kent. All rights reserved."
                           FontSize="10"
                           Foreground="#999"
                           Margin="0,0,0,0"/>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
