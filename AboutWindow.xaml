<Window x:Class="minol.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About minol"
        Height="400"
        Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Background="White">
        <StackPanel Margin="20" VerticalAlignment="Top">

            <!-- Title -->
            <TextBlock Text="minol"
                       FontSize="26"
                       FontWeight="Bold"
                       Margin="0,0,0,2"/>

            <!-- Subtitle -->
            <TextBlock Text="Minimal Streaming Overlay with Timer and Keyboard Inputs"
                       FontSize="13"
                       FontStyle="Italic"
                       Foreground="Gray"
                       Margin="0,0,0,15"/>

            <!-- Version -->
            <TextBlock Text="Version 0.0.2 – Early Unreleased Build"
                       FontSize="12"
                       Margin="0,0,0,5"/>

            <!-- Description -->
            <TextBlock Text="A streamlined overlay application designed for recording display inputs and session timers."
                       TextWrapping="Wrap"
                       FontSize="11"
                       Margin="0,0,0,15"/>

            <!-- Features -->
            <TextBlock Text="Features"
                       FontWeight="Bold"
                       Margin="0,0,0,5"/>

            <TextBlock Text="• Timer Display. Simply click to pause."
                       TextWrapping="Wrap"
                       FontSize="11"
                       Margin="10,0,0,3"/>

            <TextBlock Text="• Keyboard input display."
                       TextWrapping="Wrap"
                       FontSize="11"
                       Margin="10,0,0,3"/>

            <TextBlock Text="• Customizable fonts, colors, and opacity"
                       TextWrapping="Wrap"
                       FontSize="11"
                       Margin="10,0,0,15"/>

            <!-- Creator -->
            <TextBlock Text="Created by Kent"
                       FontSize="11"
                       Margin="0,0,0,10"/>

            <!-- GitHub Link -->
            <TextBlock FontSize="11" Margin="0,0,0,10">
                <Run Text="GitHub Repository: "/>
                <Hyperlink NavigateUri="https://github.com/kentmcamp/minimal-streaming-overlay/tree/main"
                           RequestNavigate="Hyperlink_RequestNavigate">
                    https://github.com/kentmcamp/minimal-streaming-overlay
                </Hyperlink>
            </TextBlock>

            <!-- Copyright -->
            <TextBlock Text="© 2026 Kent. All rights reserved."
                       FontSize="10"
                       Foreground="Gray"/>

        </StackPanel>
    </Grid>
</Window>
