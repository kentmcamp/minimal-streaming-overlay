<Window x:Class="minol.ValueAnalyzerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:minol"
        mc:Ignorable="d"
        Title="Analyze Values"
        Width="1600"
        Height="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="#1A1A1A"
        Foreground="#E0E0E0"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseMove="Window_MouseMove"
        MouseLeftButtonUp="Window_MouseLeftButtonUp">

    <Border BorderBrush="#404040" BorderThickness="1">
        <Grid Background="#1A1A1A">
            <Grid.RowDefinitions>
                <RowDefinition Height="32"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title Bar -->
            <Border Grid.Row="0" Background="#1F1F1F" Padding="12,0,12,0" x:Name="TitleBar">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="Analyze Values" FontSize="12" FontWeight="Bold" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                    <Button Grid.Column="1" Content="âœ•" Click="Close_Click" Width="32" Height="32" Background="Transparent" Foreground="#FF6B6B" FontSize="14" Cursor="Hand" Padding="0"/>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="280"/>
                </Grid.ColumnDefinitions>

                <!-- Main image display area -->
                <Border Grid.Column="0" Background="#0F0F0F" Margin="8" CornerRadius="4">
                    <Image x:Name="DisplayImage" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <!-- Control panel -->
                <Border Grid.Column="1" Background="#252525" Margin="0,8,8,8" CornerRadius="4" Padding="12">
                    <StackPanel>

                    <!-- Title -->
                    <TextBlock Text="Image Processing" FontSize="14" FontWeight="Bold" Foreground="#E0E0E0" HorizontalAlignment="Center" Margin="0,0,0,12"/>

                    <Separator Background="#404040" Margin="0,0,0,12"/>

                    <!-- Posterization -->
                    <StackPanel Margin="0,0,0,12">
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Gray Levels" FontSize="11" Foreground="#B0B0B0" Grid.Column="0"/>
                            <TextBlock x:Name="PosterizeLevelText" Text="256" FontSize="11" Foreground="#90EE90" Grid.Column="2"/>
                        </Grid>
                        <Slider x:Name="PosterizeSlider" Minimum="2" Maximum="20" Value="20" IsSnapToTickEnabled="True"
                                Background="#404040" Foreground="#90EE90" PreviewMouseLeftButtonUp="PosterizeSlider_PreviewMouseLeftButtonUp"/>
                    </StackPanel>

                    <Separator Background="#404040" Margin="0,0,0,12"/>

                    <!-- Black Level -->
                    <StackPanel Margin="0,0,0,12">
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Black Level" FontSize="11" Foreground="#B0B0B0" Grid.Column="0"/>
                            <TextBlock x:Name="BlackLevelText" Text="0" FontSize="11" Foreground="#90EE90" Grid.Column="2"/>
                        </Grid>
                        <Slider x:Name="BlackLevelSlider" Minimum="0" Maximum="254" Value="0"
                                Background="#404040" Foreground="#90EE90" PreviewMouseLeftButtonUp="BlackLevelSlider_PreviewMouseLeftButtonUp"/>
                    </StackPanel>

                    <Separator Background="#404040" Margin="0,0,0,12"/>

                    <!-- White Level -->
                    <StackPanel Margin="0,0,0,12">
                        <Grid Margin="0,0,0,4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="White Level" FontSize="11" Foreground="#B0B0B0" Grid.Column="0"/>
                            <TextBlock x:Name="WhiteLevelText" Text="255" FontSize="11" Foreground="#90EE90" Grid.Column="2"/>
                        </Grid>
                        <Slider x:Name="WhiteLevelSlider" Minimum="1" Maximum="255" Value="255"
                                Background="#404040" Foreground="#90EE90" PreviewMouseLeftButtonUp="WhiteLevelSlider_PreviewMouseLeftButtonUp"/>
                    </StackPanel>

                    <Separator Background="#404040" Margin="0,0,0,12"/>

                    <!-- Flip toggles -->
                    <StackPanel Margin="0,0,0,12">
                        <TextBlock Text="Transforms" FontSize="11" Foreground="#B0B0B0" Margin="0,0,0,6"/>
                        <Button x:Name="FlipHorizontalButton" Content="Flip Horizontal" Click="FlipHorizontal_Click"
                                Background="#404040" Foreground="#E0E0E0" Padding="8,6" Cursor="Hand" Margin="0,0,0,4"/>
                        <Button x:Name="FlipVerticalButton" Content="Flip Vertical" Click="FlipVertical_Click"
                                Background="#404040" Foreground="#E0E0E0" Padding="8,6" Cursor="Hand"/>
                    </StackPanel>

                    <!-- Spacer -->
                    <Grid Height="1" Background="#404040" Margin="0,0,0,12"/>

                    <!-- Exit button -->
                    <Button x:Name="ExitButton" Content="Exit" Click="Exit_Click"
                            Background="#404040" Foreground="#FF6B6B" Padding="8,6" Cursor="Hand" FontWeight="Bold"/>

                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
