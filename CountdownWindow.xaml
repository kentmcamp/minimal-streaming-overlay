<Window x:Class="minol.CountdownWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Countdown Timer" Height="250" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Preset Buttons -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
            <Button Content="30s" Width="50" Margin="5" Click="Preset_Click"/>
            <Button Content="1m" Width="50" Margin="5" Click="Preset_Click"/>
            <Button Content="2m" Width="50" Margin="5" Click="Preset_Click"/>
            <Button Content="5m" Width="50" Margin="5" Click="Preset_Click"/>
        </StackPanel>

        <!-- Custom Time Input -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel Margin="5">
                <TextBlock Text="Hours" HorizontalAlignment="Center"/>
                <TextBox x:Name="HoursBox" Width="50" Text="0" HorizontalContentAlignment="Center"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Minutes" HorizontalAlignment="Center"/>
                <TextBox x:Name="MinutesBox" Width="50" Text="0" HorizontalContentAlignment="Center"/>
            </StackPanel>
            <StackPanel Margin="5">
                <TextBlock Text="Seconds" HorizontalAlignment="Center"/>
                <TextBox x:Name="SecondsBox" Width="50" Text="0" HorizontalContentAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- Start / Cancel Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Start Countdown" Width="120" Margin="5" Click="Start_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
