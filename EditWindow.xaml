<Window x:Class="minol.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings and Themes" Height="700" Width="500" WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <DockPanel>
        <!-- Bottom button bar -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,10,10,10">
            <Button x:Name="ApplyButton" Content="Apply" Width="70" Margin="0,0,8,0" Click="ApplyButton_Click"/>
            <Button Content="Close" Width="70" Click="CloseButton_Click"/>
        </StackPanel>

        <!-- Main content with TabControl -->
        <TabControl>
            <!-- Display Settings Tab -->
            <TabItem Header="Timer Display" Padding="10,5">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Font Family" Margin="0,0,0,5" FontWeight="Bold"/>
                        <ComboBox x:Name="FontFamilyCombo" Margin="0,0,0,15"/>

                        <TextBlock Text="Font Size (px)" Margin="0,0,0,5" FontWeight="Bold"/>
                        <ComboBox x:Name="FontSizeCombo" Margin="0,0,0,15"/>

                        <TextBlock Text="Font Color" Margin="0,0,0,5" FontWeight="Bold"/>
                        <ComboBox x:Name="FontColorCombo" Margin="0,0,0,15"/>

                        <TextBlock Text="Background Color" Margin="0,0,0,5" FontWeight="Bold"/>
                        <ComboBox x:Name="BackgroundColorCombo" Margin="0,0,0,15"/>

                        <TextBlock Text="Background Opacity" Margin="0,0,0,5" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <Slider x:Name="OpacitySlider" Minimum="0" Maximum="1" Value="0.5" Width="200" TickFrequency="0.05" IsSnapToTickEnabled="False"/>
                            <TextBlock x:Name="OpacityValue" Margin="12,0,0,0" VerticalAlignment="Center" Width="40"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Key Input Tab -->
            <TabItem Header="Key Input" Padding="10,5">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Font Family" Margin="0,0,0,5" FontWeight="Bold"/>
                        <ComboBox x:Name="KeyFontFamilyCombo" Margin="0,0,0,15"/>

                        <TextBlock Text="Font Size (px)" Margin="0,0,0,5" FontWeight="Bold"/>
                        <ComboBox x:Name="KeyFontSizeCombo" Margin="0,0,0,15"/>

                        <TextBlock Text="Font Color" Margin="0,0,0,5" FontWeight="Bold"/>
                        <ComboBox x:Name="KeyFontColorCombo" Margin="0,0,0,15"/>

                        <TextBlock Text="Show Duration (sec)" Margin="0,0,0,5" FontWeight="Bold"/>
                        <TextBox x:Name="KeyShowBox" Margin="0,0,0,15"/>

                        <TextBlock Text="Fade Duration (sec)" Margin="0,0,0,5" FontWeight="Bold"/>
                        <TextBox x:Name="KeyFadeBox" Margin="0,0,0,15"/>

                        <TextBlock Text="Chord Hold Duration (sec)" Margin="0,0,0,5" FontWeight="Bold"/>
                        <TextBox x:Name="KeyChordHoldBox" Margin="0,0,0,15"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Window Position Tab -->
            <TabItem Header="Window Position" Padding="10,5">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Overlay Position" Margin="0,0,0,10" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="Choose where to position the overlay on your screen." Margin="0,0,0,15" TextWrapping="Wrap" Foreground="Gray"/>

                        <TextBlock Text="Corner Position" Margin="0,0,0,5" FontWeight="Bold"/>
                        <ComboBox x:Name="WindowAnchorCombo" Margin="0,0,0,15" Padding="8"/>

                        <TextBlock Text="Left/Right Margin (px)" Margin="0,0,0,5" FontWeight="Bold"/>
                        <TextBlock Text="Distance from left or right edge (depends on corner)" Margin="0,0,0,5" FontSize="10" Foreground="Gray"/>
                        <TextBox x:Name="WindowMarginLeftBox" Margin="0,0,0,15" Padding="8"/>

                        <TextBlock Text="Top/Bottom Margin (px)" Margin="0,0,0,5" FontWeight="Bold"/>
                        <TextBlock Text="Distance from top or bottom edge (depends on corner)" Margin="0,0,0,5" FontSize="10" Foreground="Gray"/>
                        <TextBox x:Name="WindowMarginBottomBox" Margin="0,0,0,15" Padding="8"/>

                        <TextBlock Text="Preview" Margin="0,0,0,10" FontWeight="Bold" FontSize="12" Foreground="Gray"/>
                        <TextBlock x:Name="PositionPreviewText" Margin="0,0,0,0" TextWrapping="Wrap" FontSize="11" Foreground="#666"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Theme Management Tab -->
            <TabItem Header="Themes" Padding="10,5">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10">
                    <StackPanel>
                        <TextBlock Text="Current Theme" Margin="0,0,0,5" FontWeight="Bold" FontSize="14"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock x:Name="CurrentThemeText" Text="(default)" Margin="0,0,0,0" FontSize="12"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Button Content="Set as Default" Width="120" Click="SetAsDefaultTheme_Click"/>
                        </StackPanel>

                        <Separator Margin="0,0,0,20"/>

                        <TextBlock Text="Save Current Configuration" Margin="0,0,0,10" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="Save your current settings as a new theme." Margin="0,0,0,10" TextWrapping="Wrap" Foreground="Gray"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBox x:Name="NewThemeNameBox" Width="200" Margin="0,0,8,0" Padding="8" Text="My Theme"/>
                            <Button Content="Save Theme" Width="90" Click="SaveThemeButton_Click"/>
                        </StackPanel>

                        <Separator Margin="0,0,0,20"/>

                        <TextBlock Text="Available Themes" Margin="0,0,0,10" FontWeight="Bold" FontSize="14"/>
                        <TextBlock Text="Select a theme to load." Margin="0,0,0,10" TextWrapping="Wrap" Foreground="Gray"/>

                        <ListBox x:Name="ThemesListBox" Height="200" Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="Load Selected Theme" Width="150" Margin="0,0,8,0" Click="LoadSelectedTheme_Click"/>
                            <Button Content="Delete Selected" Width="120" Click="DeleteSelectedTheme_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- About Tab -->
            <TabItem Header="About" Padding="10,5">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Image Source="pack://application:,,,/mIcon.ico" Width="48" Height="48" Margin="0,0,15,0" VerticalAlignment="Top"/>
                            <StackPanel VerticalAlignment="Top">
                                <TextBlock Text="minol"
                                           FontSize="24"
                                           FontWeight="Bold"
                                           Foreground="#333"
                                           Margin="0,0,0,5"/>
                                <TextBlock x:Name="AboutVersionText"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           Foreground="#0066CC"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Text="Timer, Keyboard Input Display, and Greytone Value Analyzer"
                                   FontSize="12"
                                   Foreground="#666"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20"/>

                        <Separator Margin="0,0,0,15"/>

                        <TextBlock Text="About"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Foreground="#333"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="minol is a lightweight, always-on-top Windows overlay for software tutorials.
                                   FontSize="11"
                                   Foreground="#666"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,15"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Creator:" FontSize="11" FontWeight="SemiBold" Foreground="#333" Width="70"/>
                            <TextBlock Text="Kent" FontSize="11" Foreground="#666"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <TextBlock Text="Release:" FontSize="11" FontWeight="SemiBold" Foreground="#333" Width="70"/>
                            <TextBlock Text="February 2026" FontSize="11" Foreground="#666"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="Source:" FontSize="11" FontWeight="SemiBold" Foreground="#333" Width="70"/>
                            <TextBlock FontSize="11">
                                <Hyperlink NavigateUri="https://github.com/kentmcamp/minimal-streaming-overlay"
                                           RequestNavigate="Hyperlink_RequestNavigate"
                                           Foreground="#0066CC">
                                    GitHub Repository
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>

                        <TextBlock Text="Â© 2026 Kent. All rights reserved."
                                   FontSize="10"
                                   Foreground="#999"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
