<Window x:Class="minol.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Overlay" Height="500" Width="360" WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,10,10,10">
            <Button Content="About" Width="70" Margin="0,0,8,0" Click="About_Click"/>
            <Button x:Name="ApplyButton" Content="Save" Width="70" Margin="0,0,8,0" Click="ApplyButton_Click"/>
            <Button Content="Close" Width="70" Click="CloseButton_Click"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10">
            <StackPanel>
                <!-- Timer Display Section -->
                <GroupBox Header="Timer Display" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Font Family" Margin="0,0,0,5"/>
                        <ComboBox x:Name="FontFamilyCombo" Margin="0,0,0,10"/>

                        <TextBlock Text="Font Size" Margin="0,0,0,5"/>
                        <ComboBox x:Name="FontSizeCombo" Margin="0,0,0,10"/>

                        <TextBlock Text="Font Color" Margin="0,0,0,5"/>
                        <ComboBox x:Name="FontColorCombo" Margin="0,0,0,10"/>

                        <TextBlock Text="Background Color" Margin="0,0,0,5"/>
                        <ComboBox x:Name="BackgroundColorCombo" Margin="0,0,0,10"/>

                        <TextBlock Text="Background Opacity" Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="OpacitySlider" Minimum="0" Maximum="1" Value="0.5" Width="140" TickFrequency="0.05" IsSnapToTickEnabled="False"/>
                            <TextBlock x:Name="OpacityValue" Margin="8,0,0,0" VerticalAlignment="Center" Width="40"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Key Input Display Section -->
                <GroupBox Header="Key Input Display" Padding="10" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Font Family" Margin="0,0,0,5"/>
                        <ComboBox x:Name="KeyFontFamilyCombo" Margin="0,0,0,10"/>

                        <TextBlock Text="Font Size" Margin="0,0,0,5"/>
                        <ComboBox x:Name="KeyFontSizeCombo" Margin="0,0,0,10"/>

                        <TextBlock Text="Font Color" Margin="0,0,0,5"/>
                        <ComboBox x:Name="KeyFontColorCombo" Margin="0,0,0,10"/>

                        <TextBlock Text="Show Duration (sec)" Margin="0,0,0,5"/>
                        <TextBox x:Name="KeyShowBox" Margin="0,0,0,10"/>

                        <TextBlock Text="Fade Duration (sec)" Margin="0,0,0,5"/>
                        <TextBox x:Name="KeyFadeBox"/>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>
